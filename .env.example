# PostgreSQL/PostGIS Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=snowdb
POSTGRES_PORT=5432

# Copernicus Data Space Ecosystem (CDSE) Credentials
# Register at: https://dataspace.copernicus.eu/
CDSE_USERNAME=your_cdse_username
CDSE_PASSWORD=your_cdse_password

# Area of Interest (AOI) - Bounding Box [west, south, east, north]
# Default: French Alps region
AOI_BBOX=5.5,44.0,7.5,46.0

# Date Ranges for Comparison (format: YYYY-MM-DD/YYYY-MM-DD)
# Period 1 (e.g., January 2024)
DATE_RANGE_1=2024-01-01/2024-01-31

# Period 2 (e.g., January 2025)
DATE_RANGE_2=2025-01-01/2025-01-31

# Optional: Cloud Coverage Threshold (0-100)
CLOUD_COVER_MAX=20
